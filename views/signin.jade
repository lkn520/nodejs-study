extends layout

block content
  div.container-full
    form#signin-form.form-signin(method="post",action="/signin")
      h2.form-signin-heading.text-center SIGN IN
      div.form-group
        input.form-input(type="text",name="name",placeholder="请输入昵称",data-toggle="tooltip",data-placement="right",title="昵称长度应在4到12个字符之间")
      div.form-group
        input.form-input(type="password",name="password",placeholder="请输入密码",data-toggle="tooltip",data-placement="right",title="密码长度应在6到32个字符之间")
      div.form-group
        button.btn.btn-block.btn-info SIGN IN
      div#success-collapse.collapse
        div.well
          h4.text-danger.text-center 账号或者密码错误
      a.btn.btn-link.btn-block(href="/signup")
        | 还没有账号？去注册&nbsp;
        i.fa.fa-hand-o-right